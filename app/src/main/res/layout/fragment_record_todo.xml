<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background">

    <ImageButton
        android:id="@+id/todo_back_btn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_back"
        android:background="@android:color/transparent"
        android:layout_marginStart="17dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/todo_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="오늘의 할 일"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/todo_content_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:text="오늘 할 일들을 3가지 추천해드릴게요!"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/todo_title_tv" />
    
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/todo_action1_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="11dp"
        android:paddingStart="22dp"
        android:background="@drawable/background_highlight_btn"
        android:drawableLeft="@drawable/ic_edit"
        android:textColor="@color/white"
        android:text="   5년 후의 내가 되어 오늘의 나에게 편지 쓰기"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/todo_content_title_tv"
        android:gravity="center_vertical" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/todo_action2_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="11dp"
        android:paddingStart="22dp"
        android:background="@drawable/background_highlight_btn"
        android:drawableLeft="@drawable/ic_edit"
        android:textColor="@color/white"
        android:text="   침대에 누워서 눈 감고 제일 좋아하는 노래 듣기"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/todo_action1_btn"
        android:gravity="center_vertical" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/todo_action3_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="11dp"
        android:paddingStart="22dp"
        android:background="@drawable/background_highlight_btn"
        android:drawableLeft="@drawable/ic_edit"
        android:textColor="@color/white"
        android:text="   길 가다 보이는 알록달록한 건물 찍어보기"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/todo_action2_btn"
        android:gravity="center_vertical" />

</androidx.constraintlayout.widget.ConstraintLayout>