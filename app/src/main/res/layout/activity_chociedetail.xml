<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="24dp">
    <ImageView
        android:id="@+id/btn_choicedetail_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/btn_choicedetail_back"
        app:layout_constraintBottom_toTopOf="@id/btn_choicedetail_next"
        android:layout_marginTop="28dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_choicedetail_choicedetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대화하고 싶은 러버의\n특징을 표현해주세요"
                android:textStyle="bold"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
            <TextView
                android:id="@+id/tv_choicedetail_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대상 *"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/tv_choicedetail_choicedetail"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="38dp"/>
            <TextView
                android:id="@+id/et_choicedetail_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="친구"
                android:background="@drawable/shape_whiteroundbox"
                android:textSize="14sp"
                android:textColor="@color/gray1"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_choicedetail_type"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/et_choicedetail_type2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="연인"
                android:background="@drawable/shape_whiteroundbox"
                android:textSize="14sp"
                android:textColor="@color/gray1"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                app:layout_constraintTop_toTopOf="@id/et_choicedetail_type"
                app:layout_constraintStart_toEndOf="@id/et_choicedetail_type"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/et_choicedetail_type3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가족"
                android:background="@drawable/shape_whiteroundbox"
                android:textSize="14sp"
                android:textColor="@color/gray1"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                app:layout_constraintTop_toTopOf="@id/et_choicedetail_type2"
                app:layout_constraintStart_toEndOf="@id/et_choicedetail_type2"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/et_choicedetail_type4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="반려동물"
                android:background="@drawable/shape_whiteroundbox"
                android:textSize="14sp"
                android:textColor="@color/gray1"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                app:layout_constraintTop_toTopOf="@id/et_choicedetail_type3"
                app:layout_constraintStart_toEndOf="@id/et_choicedetail_type3"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/tv_choicedetail_charac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="특성"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/et_choicedetail_type"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="28dp"/>
            <TextView
                android:id="@+id/et_choicedetail_charac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="다정한"
                android:background="@drawable/shape_whiteroundbox"
                android:textSize="14sp"
                android:textColor="@color/gray1"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_choicedetail_charac"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/et_choicedetail_charac2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="무한 공감"
                android:background="@drawable/shape_whiteroundbox"
                android:textSize="14sp"
                android:textColor="@color/gray1"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                app:layout_constraintTop_toTopOf="@id/et_choicedetail_charac"
                app:layout_constraintStart_toEndOf="@id/et_choicedetail_charac"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/et_choicedetail_charac3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="차분함"
                android:background="@drawable/shape_whiteroundbox"
                android:textSize="14sp"
                android:textColor="@color/gray1"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                app:layout_constraintTop_toTopOf="@id/et_choicedetail_charac2"
                app:layout_constraintStart_toEndOf="@id/et_choicedetail_charac2"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/et_choicedetail_charac4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="긍정"
                android:background="@drawable/shape_whiteroundbox"
                android:textSize="14sp"
                android:textColor="@color/gray1"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                app:layout_constraintTop_toTopOf="@id/et_choicedetail_charac3"
                app:layout_constraintStart_toEndOf="@id/et_choicedetail_charac3"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/et_choicedetail_charac5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="직설적"
                android:background="@drawable/shape_whiteroundbox"
                android:textSize="14sp"
                android:textColor="@color/gray1"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_choicedetail_charac"
                android:layout_marginTop="8dp"/>
            <TextView
                android:id="@+id/et_choicedetail_charac6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전문적"
                android:background="@drawable/shape_whiteroundbox"
                android:textSize="14sp"
                android:textColor="@color/gray1"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                app:layout_constraintTop_toTopOf="@id/et_choicedetail_charac5"
                app:layout_constraintStart_toEndOf="@id/et_choicedetail_charac5"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/et_choicedetail_charac7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="유머러스함"
                android:background="@drawable/shape_whiteroundbox"
                android:textSize="14sp"
                android:textColor="@color/gray1"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                app:layout_constraintTop_toTopOf="@id/et_choicedetail_charac6"
                app:layout_constraintStart_toEndOf="@id/et_choicedetail_charac6"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/tv_choicedetail_mbti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상대 MBTI"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/et_choicedetail_charac5"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="28dp"/>
            <EditText
                android:id="@+id/et_choicedetail_mbti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="상대방의 MBTI를 입력해주세요"
                android:singleLine="true"
                android:background="@drawable/shape_whiteroundbox"
                android:textSize="14sp"
                android:textColor="@color/gray1"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_choicedetail_mbti"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/tv_choicedetail_talk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대화 주제"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/et_choicedetail_mbti"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="28dp"/>
            <TextView
                android:id="@+id/et_choicedetail_talk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일상생활"
                android:background="@drawable/shape_whiteroundbox"
                android:textSize="14sp"
                android:textColor="@color/gray1"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_choicedetail_talk"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/et_choicedetail_talk2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="마지막 대화"
                android:background="@drawable/shape_whiteroundbox"
                android:textSize="14sp"
                android:textColor="@color/gray1"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                app:layout_constraintTop_toTopOf="@id/et_choicedetail_talk"
                app:layout_constraintStart_toEndOf="@id/et_choicedetail_talk"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/et_choicedetail_talk3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="추억"
                android:background="@drawable/shape_whiteroundbox"
                android:textSize="14sp"
                android:textColor="@color/gray1"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                app:layout_constraintTop_toTopOf="@id/et_choicedetail_talk2"
                app:layout_constraintStart_toEndOf="@id/et_choicedetail_talk2"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/tv_choicedetail_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="구체적인 상황"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/et_choicedetail_talk"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="28dp"/>
            <EditText
                android:id="@+id/et_choicedetail_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="대화하고 싶은 방향을 구체적으로 작성해주세요"
                android:background="@drawable/shape_whiteroundbox"
                android:textSize="14sp"
                android:textColor="@color/gray1"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_choicedetail_detail"
                android:layout_marginTop="10dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_choicedetail_next"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:text="러버 선택"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@drawable/shape_button"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>