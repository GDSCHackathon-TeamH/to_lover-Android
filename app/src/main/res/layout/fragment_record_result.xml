<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background">

    <ImageButton
        android:id="@+id/record_result_back_btn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_back"
        android:background="@android:color/transparent"
        android:layout_marginStart="17dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/record_result_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="일기 쓰기"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/record_result_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2024.01.12"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="19dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/record_result_title_tv" />

    <TextView
        android:id="@+id/record_result_subtitle1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘의 할 일"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginStart="24dp"
        android:layout_marginTop="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/record_result_date_tv" />

    <LinearLayout
        android:id="@+id/record_result_todo_ll"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_maincolor_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/record_result_subtitle1_tv">

        <ImageView
            android:id="@+id/record_result_todo_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit"
            app:tint="@color/white"
            android:layout_marginStart="13dp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/record_result_todo_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:text="침대에 누워서 눈 감고 제일 좋아하는 노래 듣기"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <TextView
        android:id="@+id/record_result_subtitle2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘의 일기"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginStart="24dp"
        android:layout_marginTop="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/record_result_todo_ll" />

    <TextView
        android:id="@+id/record_result_diary_tv"
        android:layout_width="match_parent"
        android:layout_height="304dp"
        android:text="일기 내용"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginTop="11dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/edit_border"
        android:paddingStart="17dp"
        android:paddingEnd="17dp"
        android:paddingTop="21dp"
        android:paddingBottom="21dp"
        android:gravity="top"
        android:elevation="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/record_result_subtitle2_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>